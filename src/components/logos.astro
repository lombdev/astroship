---
// @ts-ignore
import silestonelogo from "assets/logos/silestonelogo.jpg";
import biesselogo from "assets/logos/biesselogo.jpg";
import afimadeiralogo from "assets/logos/afimadeiralogo.jpg";
import { Picture } from "@astrojs/image/components";
---

<div class="mt-24">
  <h2 class="text-center text-slate-500">Os nossos parceiros</h2>
  <div class="flex gap-8 md:gap-20 items-center justify-center mt-10 flex-wrap">
    <Picture
      src={silestonelogo}
      alt="Silestone logo"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 60vw, 180px"
    />
    <Picture
      src={afimadeiralogo}
      alt="Afimadeira logo"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 60vw, 180px"
    />
    <Picture
      src={biesselogo}
      alt="Biesse logo"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 60vw, 180px"
    />
  </div>
</div>
